<?xml version="1.0"?>

<slideshow>
	<documentinfo>
		<author>Tom Davidson</author>
		<version>1.0</version>
		<comment>this is a comment</comment>
		<groupid>2</groupid> <!-- need to use this on xml level? -->
	</documentinfo>
	<defaultsettings>
		<backgroundcolor>#ff00ff00</backgroundcolor>
		<font>times new roman</font>
		<fontsize>24</fontsize>
		<fontcolor>#ffcccc00</fontcolor>
		<graphiccolor>#ffaaaa00</graphiccolor>
		<highlightcolor>#ffaaaa00</highlightcolor>
		<starttime>0</starttime>
		<duration>Float.MAX_VALUE</duration>
		<alignment>left</alignment>
		<scale>1</scale>
		<rotation>0</rotation>
		<cropx1>0</cropx1>
		<cropy1>0</cropy1>
		<cropx2>1</cropx2>
		<cropy2>1</cropy2>
		<xAspectRatio>4</xAspectRatio>
		<yAspectRatio>3</yAspectRatio>
	</defaultsettings>
	<slide backgroundcolor="#ffaaff00" duration="10"> 
		<!-- PWS Text -->
		<text sourcefile="null" xstart="0.5" ystart="0.5" font="arial" fontsize="26" fontcolor="#00112233"  duration="1.5">
			Some Text.
		</text>
		
		<text sourcefile="test.txt" xstart="0.5" ystart="0.5" font="arial" fontsize="26" fontcolor="#00112233"  duration="1.5"/>
		
		<!-- Our Text --> <!-- Removed the set case, moved alignment to text level -->
		<text xstart="0.1" ystart="0.1" xend="0.9" yend="0.9" font="arial" fontsize="24" fontcolor="#88776655" alignment="right" duration="1.5" starttime="2.0" backgroundcolor="#12345678" highlightcolor="#55446633">
			<richtext font="arial" fontsize="26" fontcolor="#11223344" highlightcolor="#00000000" newline="true" bold="true" italicised="true" underlined="true" strikethrough="true" superscript="true" subscript="true" >Example text!</richtext>
			<richtext font="arial" fontsize="26" fontcolor="#11223344" highlightcolor="#87654321" newline="true" bold="true" italicised="true" underlined="true" strikethrough="true" superscript="true" subscript="true" >Example \n text!</richtext>
			<!-- Removed some params from this one, should inherit -->
			<richtext newline="true" bold="true" italicised="true" underlined="true" strikethrough="true" superscript="true" subscript="true" >Example text!</richtext>
		</text>

		<!-- PWS Images -->
		<image sourcefile="cat.jpg" xstart="0.5" ystart="0.5" scale="1.0" duration="1.5" starttime="2.0" />
		
		<!-- Our Images -->
		<image sourcefile="selfie.jpg" xstart="0.5" ystart="0.5" vscale="0.5" hscale="0.75" rotation="45" fliphorizontal="true" flipvertical="true" cropx1="0.1" cropy1="0.1" cropx2="0.5" cropy2="0.5" duration="1.5" starttime="2.0">
			<!-- THESE NEED TO BE ADDED -->
			<sepia/>
			<bloom/>
			<blur/>
			<glow/>
			<grayscale/>
			<reflection/>
		</image>
		
		
		<!-- PWS Audio -->
		<audio sourcefile="gavel.wav" starttime="2.5" />
		
		<!-- sofia Audio -->
		<audio sourcefile="clap.wav" xstart="0.5" ystart="0.5" width="0.2" autoplay="true" visiblecontrols="true" playbuttononly="false" duration="1.5" starttime="2.5"/>

		
		<!-- PWS Video -->
		<video sourcefile="avengers.mkv" xstart="0.5" ystart="0.5" />
		
		<!-- sofia Video -->
		<video sourcefile="avengers.mkv" xstart="0.5" ystart="0.5" width="0.2" autoplay="true" loop="true" duration="1.5" starttime="2.5"/>

		<!-- PWS Shapes -->
		<graphic type="oval" xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" solid="true" graphiccolor="#11223344" duration="1.5">
			<cyclicshading shadingcolor="#88776655" />
		</graphic>		

		<graphic type="rectangle" xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" solid="true" graphiccolor="#11223344" duration="1.5"/>
		
		<graphic type="line" xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" solid="true" graphiccolor="#11223344" duration="1.5"/>	
		
		<!-- Our Expanded PWS Shapes -->
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<oval xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="45"/>
			<shadow weight="heavy"/>
			<horizontalshading shadingcolor="#88776655">
				<shading shadingcolor="#00ddbbcc" />
				<shading shadingcolor="#00aabbcc" stop="0.5"/> <!-- Any number of these. Could contain a stop value (between 0 and 1) as well. -->
			</horizontalshading>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<rectangle xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" arcwidth="10" archeight="10" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="45"/>
			<verticalshading shadingcolor="#88776655">
				<shading shadingcolor="#00aabbcc" stop="0.1"/>
				<shading shadingcolor="#007777cc" stop="0.9"/>
			</verticalshading>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0"> <!-- Can't have shadow -->
			<line xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" thickness="1.0"/> <!-- okay with calling this outline thickness? Yes, could also call it thickness easily-->
		</graphic>
		
		
		<!-- Our Added Shapes -->
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<circle xstart="0.5" ystart="0.5" size="10" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
			<shadow weight="heavy"/>
			<cyclicshading shadingcolor="#88776655">
				<shading shadingcolor="#00ddbbcc"/>
				<shading shadingcolor="#00aabbcc"/>
			</cyclicshading>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<square xstart="0.5" ystart="0.5" size="10" solid="true" arcwidth="10" archeight="10" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
		</graphic>
		
		
		<!-- Arrowhead size parameter ? -->
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0"> <!-- Again, no shadow -->
			<arrow xstart="0.5" ystart="0.5" xend="0.7" yend="0.7" thickness="1.0"/>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<equitriangle xstart="0.5" ystart="0.5" size="10" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<triangle xstart="0.1" ystart="0.1" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0">
				<point x="0.1" y="0.5"/>
				<point x="0.25" y="0.6"/>
				<point x="0.2" y="0.7"/>
			</triangle>
		</graphic>
		
		<!-- Removed width and height and added size, else it wouldn't be regular -->
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<regpolygon xstart="0.5" ystart="0.5" size="10" numberofsides="5" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<polygon xstart="0.1" ystart="0.1" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0">
				<point x="0.1" y="0.5"/>
				<point x="0.25" y="0.6"/>
				<point x="0.2" y="0.7"/>
			</polygon>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<star xstart="0.5" ystart="0.5" size="10" numberofpoints="5" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<chord xstart="0.5" ystart="0.5" width="10" height="10" arcangle="5" length="10" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
		</graphic>
		
		<graphic graphiccolor="#11223344" duration="1.5" starttime="2.0">
			<arc xstart="0.5" ystart="0.5" width="10" height="10" arcangle="5" length="10" solid="true" outlinecolor="#00000000" outlinethickness="1.0" rotation="0"/>
		</graphic>
		
		<!-- Question section -->
		<question id="q1" logfile="filename"> 
			<answer id="1" correct="true"/> 
		</question>
		
	</slide>
	<slide>
		<text>
			1.
		</text>
	</slide>
	<slide>
		<text>
			2.
		</text>
		<question id="q1" logfile="filename"> 
			<answer id="1" correct="true"/> 
		</question>
	</slide>
	<slide tangent="true">
		<text>
			I'm a tangent.
		</text>
	</slide>
	<slide>
		<text>
			3.
		</text>
	</slide>
	<slide>
		<text>
			4.
		</text>
	</slide>
</slideshow>
