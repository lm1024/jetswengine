		<glow/>
		<glow/>
		</image>
		
		<image sourcefile="me.png" xstart="0.5" xend="0.65" ystart="0.2"   >
		<bloom/>
		<bloom/>
		<bloom/>
		</image>
		
		<image sourcefile="me.png" xstart="0.7" xend="0.85" ystart="0.2"   >
		<sepia/>
		</image>
		
		<image sourcefile="me.png" xstart="0.1" ystart="0.6" xend="0.25"  >
		<grayscale/>
		</image>
		
		<image sourcefile="me.png" xstart="0.3" xend="0.45" ystart="0.6"   >
		<reflection/>
		<reflection/>
		</image>
		
		<image sourcefile="me.png" xstart="0.5" xend="0.65" ystart="0.6"   >
