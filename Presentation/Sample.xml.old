<?xml version="1.0"?>
<slideshow>
	<documentinfo>
		<author>Stuart J Porter</author>
		<version>1.0</version>
		<comment>Sample of the MediaPlayer input file.</comment>
	</documentinfo>
	<defaults>
		<backgroundcolor>#0000ff</backgroundcolor>
		<font>Arial</font>
		<fontsize>24pt</fontsize>
		<fontcolor>#ffcccc</fontcolor>
		<linecolor>#00ff00</linecolor>
		<fillcolor>#ff0000</fillcolor>
	</defaults>
	<slide id="sample1" duration="30">
		<text font="Times-Roman" fontsize="20pt" fontcolor="#ffffff" xstart="60" ystart="20" starttime="2" endtime="10">
			The Title with <b>Bold Font</b> and some <i>Italicised Font</i> to go with it.
		</text>
		<line xstart="40" ystart="50" xend="120" yend="50" linecolor="#00cc00" starttime="4" endtime="20"/>
		<shape type="oval" xstart="80" ystart="40" width="100" height="45" fillcolor="#cc0000" starttime="6" endtime="20">
			<shading x1="85" y1="45" color1="#ffffff" x2="160" y2="80" color2="#000000" cyclic="true"/>
		</shape>
		<audio urlname="http://www.amp.york.ac.uk/mySound.wav" starttime="3" loop="true"/>
		<image urlname="http://www.amp.york.ac.uk/myPicture.gif" xstart="150" ystart="200" width="200" height="80" starttime="8" endtime="12"/>
		<midi urlname="myLocalMidi.midi" starttime="2" loop="false"/>
		<video urlname="http://www.amp.york.ac.uk/AGoodVideo.avi" starttime="20" loop="false" xstart="100" ystart="400"></video>
	</slide>
	<slide id="sample2">
		<text xstart="60" ystart="20">
			Some text layed out with the defaults..
		</text>
		<line xstart="40" ystart="50" xend="120" yend="50"/>
		<shape type="rectangle" xstart="80" ystart="40" width="100" height="45">
		</shape>
		<audio urlname="http://www.amp.york.ac.uk/AnotherSound.au"/>
		<image urlname="http://www.amp.york.ac.uk/AnotherPicture.jpg" xstart="150" ystart="200"/>
		<midi urlname="myLocalMidi.midi"/>
		<video urlname="http://www.amp.york.ac.uk/AGoodVideo.avi" xstart="100" ystart="400"/>
	</slide>
</slideshow>
