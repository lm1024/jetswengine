<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wavemedia.studentapp"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/singleswhite"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wavemedia.studentapp.QuestionActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.wavemedia.studentapp.Open"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wavemedia.studentapp.Open" />
        </activity>
        <activity
            android:name="com.wavemedia.studentapp.OptionA"
            android:label="@string/title_activity_option"
            android:parentActivityName="com.wavemedia.studentapp.QuestionActivity"
            android:screenOrientation="sensorPortrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wavemedia.studentapp.QuestionActivity" />
        </activity>
        <activity
            android:name="com.wavemedia.studentapp.OptionB"
            android:label="@string/title_activity_option_b"
            android:parentActivityName="com.wavemedia.studentapp.QuestionActivity"
            android:screenOrientation="sensorPortrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wavemedia.studentapp.QuestionActivity" />
        </activity>
        <activity
            android:name="com.wavemedia.studentapp.OptionC"
            android:label="@string/title_activity_option_c"
            android:parentActivityName="com.wavemedia.studentapp.QuestionActivity"
            android:screenOrientation="sensorPortrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wavemedia.studentapp.QuestionActivity" />
        </activity>
        <activity
            android:name="com.wavemedia.studentapp.OptionD"
            android:label="@string/title_activity_option_d"
            android:parentActivityName="com.wavemedia.studentapp.QuestionActivity"
            android:screenOrientation="sensorPortrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wavemedia.studentapp.QuestionActivity" />
        </activity>
        <activity
            android:name="com.wavemedia.studentapp.Open"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>