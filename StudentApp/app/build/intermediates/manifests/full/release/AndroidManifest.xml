<?xml version="1.0" encoding="utf-8"?>
<!-- App Manifest File -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wavemedia.studentapp"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
 <!-- App Package Name -->


    <!-- Permissions -->
    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network Permission -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- WIFI Permission -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Application Declaration -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/singleswhite"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Question Activity Declaration -->
        <activity
            android:name="com.wavemedia.studentapp.QuestionActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.wavemedia.studentapp.Open"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wavemedia.studentapp.Open" />
        </activity>

        <!-- Open Activity Declaration -->
        <activity
            android:name="com.wavemedia.studentapp.Open"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>